.modal.fade.in
  = simple_form_for([@page,@visit], :remote => true, :html => {:class => 'form-vertical' }) do |f|
    .modal-header
      %button.close{'type'=>'button','data-dismiss'=>"modal", 'aria-hidden'=>'true'}
        =raw '&times;'
      %h3 When will you be visiting

    .modal-body
      = f.error_notification
      = f.input :start_hour, :label => 'Time', :collection => @hours_dropdown
      = f.hidden_field :start_day, :value => params[:day]
      
    .modal-footer
      %a.btn{:href=>"#",'data-dismiss'=>"modal"} Close
      = f.button :submit, 'Add your visit', :class => 'btn-primary'